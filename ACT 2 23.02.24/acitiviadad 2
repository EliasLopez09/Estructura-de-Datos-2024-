eJERCICIO 2

static void Main(string[] args)
{
    const int LADO = 10;
    const double PI = 3.1416;

    //hallar el area de un triangulo base por altura/2
    Console.WriteLine( "PARA HALLAR EL AREA DE UN TRIANGULO" );
    Console.WriteLine("INGRESE LA BASE: ");
    double x = Convert.ToInt32(Console.ReadLine());

    Console.WriteLine("INGRESE LA ALTURA: ");
    double y = Convert.ToInt32(Console.ReadLine());

    double result = (x * y) / 2;
    Console.WriteLine("EL AREA DEL TRIANGULO ES: "+result);

    //hallar el area de un rectangulo  lado * lado
    Console.WriteLine("PARA HALLAR EL AREA DE UN CUADRADO");


    int areaCuadrado = LADO * LADO;
    Console.WriteLine("EL AREA DEL CUADRADO ES: " + areaCuadrado);

    //hallar el area de un circulo pi*radio al cuadrado
    Console.WriteLine("PARA HALLAR EL AREA DE UN CIRCULO");
    Console.WriteLine("INGRESE EL RADIO DEL CIRCULO ");
    double radio= Convert.ToInt32(Console.ReadLine());

    double areaCirculo= PI*(radio * radio);
    Console.WriteLine("EL AREA DEL CIRCULO  ES: " + areaCirculo);


    Console.ReadKey();

}
*********************
static void Main(string[] args)
{
    Console.WriteLine("INGRESE USUARIO: ");
    string usuario = Convert.ToString(Console.ReadLine());
    Console.WriteLine("INGRESE CONTRASEÑA: ");
    string contrasena= Convert.ToString(Console.ReadLine());

    Console.WriteLine("INGRESE NOMBRE DE USUARIO");
    string verUsuario = Convert.ToString(Console.ReadLine());
    if (verUsuario == usuario)
    {
        Console.WriteLine("INGRESE LA CONTRASEÑA ");
        string verContrasena = Convert.ToString(Console.ReadLine());    
        if (verContrasena == contrasena)
        {
            Console.WriteLine("BIENVENIDO :)");
            Console.ReadKey();
        }
        else
        {
            Console.WriteLine("la contraseña es incorrecta");
        }
    }
    else
    {
        Console.WriteLine("El usuario no es correcto");

    }

    


}

